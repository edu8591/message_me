<header class="navbar navbar-expand-lg navbar-dark bg-dark">

  <button class="navbar-toggler ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Chatroom", root_path, class:"nav-link" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Messages</a>
      </li>

    </ul>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
          Account
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <% if logged_in? %>
          <%= link_to "Log out", logout_path, class:"dropdown-item", method: :delete %>
        <% else %>
          <%= link_to "Log in", login_path, class:"dropdown-item" %>
        <% end %>
          <a class="dropdown-item" href="#">Sign up</a>
        </div>
        </li>
        <% if !logged_in? %>
          <li class="nav-item">
            <a class="btn px-3 btn-primary rounded-lg" href="#">Log in</a>
          </li>
        <% end %>
    </ul>
  </div>
</header>